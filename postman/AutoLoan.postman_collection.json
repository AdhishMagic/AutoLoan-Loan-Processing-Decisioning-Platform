        {
          "name": "OTP Required (Forbidden)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/loans/{{loan_id}}",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "loans",
                "{{loan_id}}"
              ]
            },
            "description": "Expected: 403 if API OTP verification is required and not completed."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200 or 403', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 403]);",
                  "});"
                ]
              }
            }
          ],
          "response": [
            {
              "name": "403 Example",
              "originalRequest": {},
              "status": "Forbidden",
              "code": 403,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "cookie": [],
              "body": "{\n  \"message\": \"OTP verification required. Please verify your email OTP to access the API.\"\n}"
            }
          ]
        },
        {
          "name": "Rate Limited (429)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/loans/{{loan_id}}",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "loans",
                "{{loan_id}}"
              ]
            },
            "description": "Expected: 429 when exceeding 60 requests/minute per token. (Run repeatedly to trigger.)"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200/429', function () {",
